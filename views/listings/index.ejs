<% layout("/layouts/boilerplate") %>
<body>
  <h3>All List</h3>
  <!-- <form method="get" action="/listings/new">
        <button>Create a new Listing</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allData){%>
    <a href="/listings/<%= listing._id %>" class="listings-links">
      <div class="card">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          style="height: 20rem"
          alt="Listing Image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            <% if (listing.price !== undefined && !isNaN(listing.price)) { %>
              <%= listing.price.toLocaleString("en-IN") %> /night
            <% } else { %>
              Price not available /night
            <% } %>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
